---
const { href = "#", title = "NoteLink", pubdate = "2025-11-01"} = Astro.props;
---

<a href={href} class="notelink">
    <span class="title">{title}</span>
    <span class="date">最后更新：{pubdate.slice(0,10)}</span>
</a>

<style>
.notelink {
    /* background-color: rgba(82, 168, 249, 0); 浅蓝色背景 */
    /* backdrop-filter: blur(2px); */
    color: black;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.4rem 1rem;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

.notelink .title {
    font-weight: 400;
    font-size: 1rem;
    text-align: left;
}

.notelink .date {
    font-size: 0.9rem;
    color: #888;
    text-align: right;
}

.notelink:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 14px rgba(0,0,0,0.1);
    background-color: rgba(224, 240, 255, 0.4);
}
</style>