<style>
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: var(--text);
    min-height: calc(100vh - var(--nav-height));
    overflow: hidden;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(255,255,255,0.65);
    backdrop-filter: blur(6px);
  }

  :global(body).dark .overlay {
    background: rgba(15,18,28,0.55);
  }

  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .avatar {
    margin-top: 50px;
    position:relative;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    border: 3px solid rgba(255,255,255,0.85);
    box-shadow: 0 4px 18px rgba(45,108,223,0.25);
    object-fit: cover;
  }

  .name {
    margin: 8px 0 0 0;
    font-size: 3.5rem;
    font-weight: 800;
    color: rgb(255, 255, 255);
    text-shadow:
        0 2px 4px rgba(0,0,0,0.3),
        0 4px 8px rgba(0,0,0,0.5);
  }

  .welcome {
    color: rgb(255, 255, 255);
    padding: 0.75rem 2rem;
    background-color: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(2px);
    border-radius: 2rem;
    font-size: 1.2rem;
    max-width: 600px;
    line-height: 1.5;
    text-shadow:
        0 2px 4px rgba(0,0,0,0.3),
        0 4px 8px rgba(0,0,0,0.5);
  }

  @media (max-width: 600px) {
    .avatar {
      width: 110px;
      height: 110px;
    }
    .name { font-size: 1.8rem; }
    .welcome { font-size: 1rem; padding: 0 20px; }
  }
</style>
